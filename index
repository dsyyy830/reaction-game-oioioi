<html lang="zh">
<head>
  <meta charset="UTF-8" />
  <title>反应速度小游戏</title>
  <style>
    body {
      font-family: sans-serif;
      text-align: center;
      margin-top: 100px;
      background-color: #f5b1fd;
    }
    #gameButton {
      padding: 20px 40px;
      font-size: 24px;
      border: none;
      border-radius: 10px;
      background-color: #4CAF50;
      color: rgb(255, 255, 255);
      cursor: pointer;
    }
    #message {
      margin-top: 30px;
      font-size: 20px;
    }
  </style>
</head>
<body>
  <h1>杜思远的oioioi反应速度测试</h1>
  <button id="gameButton">准备开始oi</button>
  <div id="message"></div>

  <script>
    const button = document.getElementById("gameButton");
    const message = document.getElementById("message");

    let startTime = 0;
    let waiting = false;
    let ready = false;

    button.addEventListener("click", () => {
      if (!waiting && !ready) {
        message.textContent = "准备...";
        waiting = true;
        button.disabled = true;
        button.textContent = "等待中...";
        
        const delay = Math.random() * 2000 + 1000; // 1~3秒
        setTimeout(() => {
          ready = true;
          startTime = Date.now();
          button.disabled = false;
          button.textContent = "点击我oi！";
          message.textContent = "";
        }, delay);
      } else if (ready) {
        const reactionTime = Date.now() - startTime;
        message.textContent = `你的反应时间是 ${reactionTime} 毫秒oi！`;
        button.textContent = "再来一次oi";
        waiting = false;
        ready = false;
      } else {
        message.textContent = "太快了，还没准备好oi！";
      }
    });
  </script>
</body>
</html>
